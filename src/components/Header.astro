<style>
  header {
    width: 100%;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }

  nav {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 1em;
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 0.5em;
  }

  h2 {
    margin: 0;
    font-size: 1em;
  }

  h2 a {
    text-decoration: none;
    white-space: nowrap; /* evita que el tÃ­tulo se parta feo */
  }

  .internal-links {
    display: flex;
    gap: 0.5em;
    flex-wrap: wrap;
    justify-content: center;
  }

  .social-links {
    display: flex;
    align-items: center;
    gap: 0.4em; /* esto ayuda en mÃ³vil */
  }

  .social-links a {
    display: inline-flex;
    align-items: center;
    opacity: 0.75;
    transition:
      opacity 0.2s ease,
      transform 0.2s ease,
      color 0.2s ease;
  }

  .social-links a:hover {
    opacity: 1;
    color: var(--accent);
    transform: translateY(-2px);
  }

  /* ðŸ“± MÃ“VIL */
  @media (max-width: 720px) {
    nav {
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 0.75em 1em;
    }

    nav a {
      padding: 0.6em 0.5em;
    }

    .social-links {
      margin-top: 0.25em;
      justify-content: center;
      flex-wrap: wrap;
    }

    .social-links svg {
      width: 24px;
      height: 24px;
    }
  }
</style>
